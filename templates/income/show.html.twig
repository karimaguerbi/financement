{% extends 'base.html.twig' %}

{% block title %}Income{% endblock %}

{% block body %}
    <h1>Income</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ income.id }}</td>
            </tr>
            <tr>
                <th>Source</th>
                <td>{{ income.source }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ income.amount }}</td>
            </tr>
            <tr>
                <th>Pay_at</th>
                <td>{{ income.payAt ? income.payAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('income_index') }}"><button class="btn btn-lg btn-primary" type="submit" >back to list</button></a><br><br>

    <a href="{{ path('income_edit', {'id': income.id}) }}"><button class="btn btn-lg btn-primary" type="submit" >edit</button></a>

    {{ include('income/_delete_form.html.twig') }}
{% endblock %}
