{% extends 'base.html.twig' %}

{% block title %}Expenses{% endblock %}

{% block body %}
    <h1>Expenses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ expense.id }}</td>
            </tr>
            <tr>
                <th>Beneficiary</th>
                <td>{{ expense.beneficiary }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ expense.reason }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ expense.amount }}</td>
            </tr>
            <tr>
                <th>Take_at</th>
                <td>{{ expense.takeAt ? expense.takeAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('expenses_index') }}"><button class="btn btn-lg btn-primary" type="submit" >back to list</button></a><br><br>

    <a href="{{ path('expenses_edit', {'id': expense.id}) }}"><button class="btn btn-lg btn-primary" type="submit" >edit</button></a>

    {{ include('expenses/_delete_form.html.twig') }}
{% endblock %}
